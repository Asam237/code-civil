<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProcedurePlainte">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/justice"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CE000000"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/clFirstOne"
        android:layout_marginHorizontal="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewFirstHome"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_home"
            android:layout_width="25dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="25dp"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/viewFirstBack"
            app:layout_constraintRight_toRightOf="@+id/viewFirstHome"
            android:text="Procedure Plainte"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/viewFirstBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_baseline_arrow_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFirst"
        app:cardBackgroundColor="#4BDDD7D7"
        android:elevation="2dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/clFirstOne"
        android:layout_width="match_parent"
        android:layout_height="120dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContactHuissier"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCall"
            android:src="@drawable/ic_baseline_call"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textSize="20sp"
            android:text="CONTACTER UN HUISSIER"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSecund"
        app:cardBackgroundColor="#4BDDD7D7"
        android:elevation="2dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/cvFirst"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContactGendarmerie"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivCall0"
                android:src="@drawable/ic_baseline_call"
                android:layout_width="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="30dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:textSize="20sp"
                android:text="CONTACTER LA GENDARMERIE"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ivCall0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvStartFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Copyrigth 2021 - ENSPM"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>